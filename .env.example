# Environment
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/patient_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=patient_db
DB_HOST=postgres
DB_PORT=5432

# Redis
REDIS_URL=redis://redis:6379

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://auth-service:8000
PATIENT_SERVICE_URL=http://patient-service:8000
SEARCH_SERVICE_URL=http://search-service:8000

# API Gateway
API_GATEWAY_URL=http://localhost:8000

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090